<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <Button
        android:id="@+id/get_specs_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Specs"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id ="@+id/imei_layer"

        android:text="IMEI:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/get_specs_button"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id ="@+id/imei_text"

        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="@id/imei_layer"
        app:layout_constraintStart_toEndOf="@id/imei_layer" />

    <TextView
        android:id ="@+id/physic_operator_layer"

        android:text="Operador de red:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/imei_layer"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView

        android:id ="@+id/physic_operator_text"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="@id/physic_operator_layer"
        app:layout_constraintStart_toEndOf="@id/physic_operator_layer" />

    <TextView
        android:id ="@+id/virtual_operator_layer"

        android:text="Operador de la SIM:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/physic_operator_layer"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id ="@+id/virtual_operator_text"

        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="@id/virtual_operator_layer"
        app:layout_constraintStart_toEndOf="@id/virtual_operator_layer" />

    <TextView
        android:id ="@+id/Id_subscriptor_layer"

        android:text="ID Subscriptor:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/virtual_operator_layer"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id ="@+id/Id_subscriptor_text"

        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="@id/Id_subscriptor_layer"
        app:layout_constraintStart_toEndOf="@id/Id_subscriptor_layer" />

    <TextView
        android:id ="@+id/serial_number_layer"

        android:text="Número de serie:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/Id_subscriptor_layer"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id ="@+id/serial_number_text"

        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="@id/serial_number_layer"
        app:layout_constraintStart_toEndOf="@id/serial_number_layer" />

    <TextView
        android:id ="@+id/software_version_layer"

        android:text="Versión de software:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/serial_number_layer"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id ="@+id/software_version_text"

        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="@id/software_version_layer"
        app:layout_constraintStart_toEndOf="@id/software_version_layer" />

    <TextView
        android:id ="@+id/answer_number_layer"

        android:text="Numero de contestador:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/software_version_layer"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id ="@+id/answer_number_text"

        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="@id/answer_number_layer"
        app:layout_constraintStart_toEndOf="@id/answer_number_layer" />


    <TextView
        android:id ="@+id/roaming_layer"

        android:text="Roaming:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/answer_number_layer"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id ="@+id/roaming_text"

        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="@id/roaming_layer"
        app:layout_constraintStart_toEndOf="@id/roaming_layer" />



</androidx.constraintlayout.widget.ConstraintLayout>